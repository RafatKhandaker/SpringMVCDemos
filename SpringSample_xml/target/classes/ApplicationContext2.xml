<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean 
		name="ICustomerRepository" 
		class="com.BlackJack.Repository.HibernateCustomerRepository"/>
	
<!--  for custructor injection must pass in arguements for index of constructor params -->
	
	<bean 
		name="ICustomerService" 
		class="com.BlackJack.Service.CustomerService">
		<constructor-arg index="0" ref="ICustomerRepository"></constructor-arg> 
		</bean>
		
</beans>
	